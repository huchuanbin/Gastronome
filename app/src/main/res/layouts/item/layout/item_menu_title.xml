<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tvImtro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_size"
        android:text="123"
        android:textColor="@color/colorWrite"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/tvIngredientsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvImtro"
        android:layout_marginTop="@dimen/title_size"
        android:text="主料:"
        android:textColor="@color/colorWrite"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvIngredientsTitle"
        android:text="456"
        android:textColor="@color/colorWrite"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/tvBurdenTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIngredients"
        android:layout_marginTop="@dimen/title_size"
        android:text="辅料:"
        android:textColor="@color/colorWrite"
        android:textSize="@dimen/title_size" />

    <TextView
        android:layout_below="@+id/tvBurdenTitle"
        android:id="@+id/tvBurden"
        android:layout_width="match_parent"
        android:text="0000"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWrite"
        android:textSize="@dimen/title_size" />

</RelativeLayout>